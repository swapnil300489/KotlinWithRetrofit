<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterActivity"
    android:background="#ffffff">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="12dp"
            android:gravity="center"/>


        <ImageView
            android:id="@+id/id_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/stat"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_text"/>


        <EditText
            android:id="@+id/id_name_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="Enter Name"
            android:textColorHint="#6C6C6C"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/id_imageView"/>

        <EditText
            android:id="@+id/id_contact_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Enter Contact Number"
            android:textColorHint="#6C6C6C"
            android:inputType="number"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/id_name_ed"/>

        <EditText
            android:id="@+id/id_email_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Enter Email Id"
            android:textColorHint="#6C6C6C"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/id_contact_ed"/>

        <EditText
            android:id="@+id/id_password_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Enter Password"
            android:textColorHint="#6C6C6C"
            android:textColor="#000000"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/id_email_ed"/>


        <Button
            android:id="@+id/id_registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/id_password_ed"/>


        <TextView
            android:id="@+id/id_already_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account"
            android:textColor="#000000"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/id_registerBtn"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>