<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorWhite"
        android:layout_margin="5dp">


            <TextView
                android:id="@+id/id_policyImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:background="@drawable/circle_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/id_name"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:gravity="center_vertical"
                android:hint="Name"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:fontFamily="serif"
                app:layout_constraintLeft_toRightOf="@+id/id_policyImg"
                app:layout_constraintBottom_toTopOf="@id/id_date1"/>

            <TextView
                android:id="@+id/id_policyNo"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:gravity="center_vertical"
                android:hint="Policy No"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:fontFamily="serif"
                app:layout_constraintLeft_toRightOf="@+id/id_name"
                app:layout_constraintBottom_toTopOf="@id/id_date2"/>

            <TextView
                android:id="@+id/id_date1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:gravity="center_vertical"
                android:hint="Name"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:fontFamily="serif"
                app:layout_constraintLeft_toRightOf="@+id/id_policyImg"
                app:layout_constraintTop_toBottomOf="@id/id_name"/>

            <TextView
                android:id="@+id/id_date2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:gravity="center_vertical"
                android:hint="Name"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:fontFamily="serif"
                app:layout_constraintLeft_toRightOf="@+id/id_date1"
                app:layout_constraintTop_toBottomOf="@id/id_policyNo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>